<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zpw.po.Job">
	<insert id="insertJob" >
		insert into tb_job
		(username,ep_name,name,city,edu,experience,money,intro,pub_time)
		values(#{username},#{ep_name},#{name},#{city},#{edu},#{experience},#{money},#{intro},#{pub_time})
	</insert>
	
	<update id="updateJob" >
		update tb_job set
		(name,city,edu,experience,money,intro,pub_time)
		values(#{name},#{city},#{edu},#{experience},#{money},#{intro},#{pub_time})
		where username = #{username}
	</update>

	<select id="qEp_name" resultType="Integer">
		select tb_enterprise.name from
		tb_enterprise where
		username=#{username}
	</select>

	<select id="qByUsernameList" resultType="Job">
		select * from
		tb_job where
		username=#{username}
	</select>
	
	<select id="qById" resultType="Job">
		select * from
		tb_job where
		id=#{id}
	</select>
</mapper>